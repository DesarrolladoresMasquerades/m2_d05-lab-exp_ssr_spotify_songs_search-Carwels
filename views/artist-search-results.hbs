
<h1> Artists </h1>

<section class="container">
  {{#each artist}}

    <div>

      {{#if images.0.url}}
        <img src="{{images.0.url}}" alt=""/>
      {{/if}}

      <h2>{{name}}</h2>
      
      <button><a href="/albums/{{id}}"> View All Albums </a></button>

    </div>

  {{/each}}
</section>